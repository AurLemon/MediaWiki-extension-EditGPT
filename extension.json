{
	"name": "EditGPT",
	"author": [
		"AurLemon"
	],
    "version": "0.2.0",
	"descriptionmsg": "editgpt-desc",
	"url": "https://github.com/AurLemon/MediaWiki-extensions-EditGPT",
	"license-name": "GPL-2.0-or-later",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"AutoloadClasses": {
		"EditGPTHooks": "includes/EditGPTHooks.php",
        "GPTRequest": "includes/GPTRequest.php"
	},
	"Hooks": {
		"BeforePageDisplay": [
            "EditGPTHooks::onBeforePageDisplay"
        ]
	},
    "GroupPermissions": {
		"user": {
			"useeditgpt": true
		}
	},
	"AvailableRights": [
		"useeditgpt"
	],
	"ResourceModules": {
		"ext.EditGPT": {
			"scripts": [
				"resources/EditGPT.js"
			],
            "messages": [
				"editgpt-button-label",
                "editgpt-button-copy",
                "editgpt-title",
                "editgpt-input",
                "editgpt-output",
                "editgpt-history",
                "editgpt-copy-success",
                "editgpt-request-sending",
                "editgpt-request-empty",
                "editgpt-request-failed",
                "editgpt-completion-created",
                "editgpt-completion-totaltoken",
                "editgpt-completion-model",
                "editgpt-completion-comma",
                "editgpt-completion-period"
			],
			"styles": [
				"resources/EditGPT.css"
			],
			"dependencies": [
				"mediawiki.api",
				"oojs-ui",
				"oojs-ui.styles.icons-editing-core",
				"jquery.textSelection",
				"jquery.spinner",
				"oojs-ui-core",
				"oojs-ui-widgets"
			],
			"localBasePath": ".",
			"remoteExtPath": "EditGPT"
		}
	},
	"config": {
		"wgEditGPTAPIBase": {
			"value": "https://api.openai.com"
		},
		"wgEditGPTAPIKey": {
			"value": null
		},
        "wgEditGPTModel": {
			"value": "gpt-3.5-turbo"
		},
        "wgEditGPTMaxTokens": {
			"value": 2048
		},
        "wgEditGPTTemperature": {
			"value": 0.7
		},
        "wgEditGPTRole": {
			"value": "user"
		},
        "wgEditGPTSecurityToken": {
			"value": null
		}
	},
    "APIModules": {
        "editgptrequest": "GPTRequest"
    },    
	"manifest_version": 2,
    "MessagesDirs": {
        "EditGPT": [
            "i18n"
        ]
    }
}
